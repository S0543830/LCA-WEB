        <tr>
            <th>Beschreibung:</th>
            <th>Menge:</th>
            <th>Einheit:</th>
            <th>Umweltinkatoren</th>
        </tr>
        
            @for (int j = 0; j < Model._LRohstoff.Count; j++)
            {
                <tr>
